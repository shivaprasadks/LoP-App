<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.think.myopencart">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Permission to write to external storage -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".ProductViewActivity" />
        <activity android:name=".FragmentProductList" />
        <activity android:name=".Checkout" />
        <activity android:name=".CartViewActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".VetonCallActivity" />
        <activity android:name=".GroomingActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AppointmentActivity" />
        <activity android:name=".DailyWalkActivity" />
        <activity android:name=".TrainingActivity" />
        <activity android:name=".AdoptionActivity"></activity>
    </application>

</manifest>